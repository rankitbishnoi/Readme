<!doctype html>
<html>
<head>
     <title>ReadMe</title>
     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
     <style>
     body         {background-color: #20201C; }
     </style>
</head>
<body>
     <div class="container-fluid">
          <nav class="navbar navbar-inverse">
               <div class="container-fluid">
                    <div class="navbar-header">
                         <a  class="navbar-brand" href='/'>Readme</a>
                    </div>
                    <div class="collapse navbar-collapse">
                         <ul class="nav navbar-nav">
                              <li><a href='/books'>Books</a></li>
                         </ul>
                    </div>
               </div>
          </nav>

          <div class="container jumbotron">
               <div class="well">
                    <h4> We help you search books from all over world. We will provide you withh all the details about them. Let's get started!</h4>
               </div>
               <div class="row">
                    <div class="col-md-8">
                         <img class="img-responsive" src="images/home.jpg">
                    </div>
                    <div class="col-md-4 well">
                         <% if (user) { %>
                              <h3> Favourite Books: </h3>
                              <% if (user.favBooks === [] || user.favBooks === null || user.favBooks === undefined) { %>
                                   <p> No favorite Books have been selected yet. </p>
                                   <% } else { %>
                                        <ul class="list-group">
                                             <% for(var i=0; i< user.favBooks.length; i++) { %>
                                                  <li class="list-group-item"><a href='/openFav?id=<%=i%>'><%=user.favBooks[i].title%></a></span><a class="pull-right" href='/removeFav?id=<%=i%>'>X</a></li>
                                                  <% } %>
                                             </ul>
                                             <% } %>
                                             <% } else { %>

                                                  <p>Login or Register with:</p>
                                                  <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>
                                                  <% } %>
                                             </div>
                                        </div>
                                   </div>

                              </div>
                         </body>
                         </html>
