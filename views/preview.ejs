<!doctype html>
<html>
<head>
     <title>ReadMe</title>
     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
     <style>
     body         {background-color: #20201C; }
     </style>
</head>
<body>
     <div class="container-fluid">
          <nav class="navbar navbar-inverse">
               <div class="container-fluid">
                    <div class="navbar-header">
                         <a  class="navbar-brand" href='/'>Readme</a>
                    </div>
                    <div class="collapse navbar-collapse">
                         <ul class="nav navbar-nav">
                              <li><a href='/books'>Books</a></li>
                         </ul>
                    </div>
               </div>
          </nav>

          <div class="container jumbotron">
               <div class="row">
                    <div class="col-sm-12 col-md-4 well">
                         <img src="<%= book.volumeInfo.imageLinks.thumbnail %>" alt="..." class="img-responsive">
                         <% if (book.volumeInfo.publisher) { %>
                         <p><string>Publisher</strong>: <%= book.volumeInfo.publisher %> </p>
                         <% } %>
                         <% if (book.volumeInfo.authors) { %>
                              <p><strong>Auther</strong>: <%= book.volumeInfo.authors[0] %> </p>
                              <% } %>
                    </div>
                    <div class="col-sm-12 col-md-8">
                         <h3><%=book.volumeInfo.title%></h3>
                         <hr>
                         <% if (book.volumeInfo.description) { %>
                         <p><strong> Description </strong>: </p>
                         <% } %>
                         <blockquote class="blockquote"><%=book.volumeInfo.description%></blockquote>
                         <hr>
                         <a role="button" href="<%=book.volumeInfo.previewLink%>" class="btn btn-primary">Preview</a>
                         <a role="button" href="<%=book.volumeInfo.infoLink%>" class="btn btn-primary">More Info</a>
                         <a role="button" class="btn btn-danger" href="/addFav?id=<%=index%>">Add to Favourite</a>
                    </div>
               </div>
          </div>

     </div>
</body>
</html>
